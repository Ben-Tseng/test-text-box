javascript:(()=>{const s=prompt("Delay seconds?","5");if(s===null)return;const ms=Math.max(0,Number(s))*1000;if(!Number.isFinite(ms))return alert("Invalid number");const norm=t=>(t||"").trim().toLowerCase();const pick=n=>{const k=n?.closest?.("kat-button,button");if(!k)return null;if(k.tagName==="KAT-BUTTON"){const label=norm(k.getAttribute("label")||k.textContent);if(label==="send")return k.querySelector("button")||k;}if(k.tagName==="BUTTON"&&norm(k.textContent)==="send")return k;return null;};const h=e=>{const t=pick(e.target);if(!t)return;e.preventDefault();e.stopPropagation();e.stopImmediatePropagation?.();document.removeEventListener("click",h,true);setTimeout(()=>t.click(),ms);alert(`Send will click in ${ms/1000}s`);};document.addEventListener("click",h,true);alert("Armed: click Send once.");})();
