javascript:(()=>{const s=prompt("Delay seconds?","5");if(s===null)return;const ms=Math.max(0,Number(s))*1000;if(!Number.isFinite(ms))return alert("Invalid number");const n=t=>(t||"").trim().toLowerCase();const btn=(()=>{for(const k of document.querySelectorAll("kat-button,button")){if(k.tagName==="KAT-BUTTON"){if(n(k.getAttribute("label")||k.textContent)==="send")return k.querySelector("button")||k;}else if(k.tagName==="BUTTON"&&n(k.textContent)==="send")return k;}return null;})();if(!btn)return alert("Send not found");alert(`Will click Send in ${ms/1000}s`);setTimeout(()=>btn.click(),ms);})();
